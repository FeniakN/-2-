Task4
def main():
    # Задані числа
    x = 3
    y = 7

    # Перевірка, щоб x і y були різними числами
    if x == y:
        print("Введені числа повинні бути різними.")
        return

    # Знайти менше з двох чисел
    lesser = min(x, y)
    # Знайти більше з двох чисел
    greater = max(x, y)

    # Замінити менше число половиною їх суми
    lesser = (lesser + greater) / 2
    # Замінити більше число подвоєним добутком
    greater = 2 * (x * y)

    # Вивести результати
    print("Після обміну:")
    print(f"x = {lesser}")
    print(f"y = {greater}")

if __name__ == "__main__":
    main()
